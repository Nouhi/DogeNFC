    %script{:src => "http://code.jquery.com/jquery-1.11.3.min.js"}
    :javascript
      $(function () {

        var resizeGallery = function() {
          $(".gallery").css("height", $(".slideImg").first().height()+25)
        }

        var throggle = function(fun) {
          setTimeout(fun, 0)
          setTimeout(fun, 10)
          setTimeout(fun, 150)
          setTimeout(fun, 500)
        }

        throggle(resizeGallery)
        $(window).on("resize", resizeGallery)

        $('.slideImg').on('click', function (el) {

          if ($(el.target).hasClass("active")) {
            $('.slideImg').removeClass("active")
            $(".slideImg.placeholder").addClass("hidden")
          } else {
            $(el.target).toggleClass('active')
            $(".slideImg.placeholder").removeClass("hidden")
          }

        })
      }())
